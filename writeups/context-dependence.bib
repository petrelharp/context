  interhash = {12d5a9fd744534bb46ba280278bb360f},
  intrahash = {e37ae192d17bdda31525a9cb9b511d17},
  keywords = {cellular_automata land_use modeling},
  timestamp = {2014-05-28T14:42:49.000+0200},
  title = {Methods and techniques for rigorous calibration of a cellular automaton model of urban growth},
  year = 1996
}

