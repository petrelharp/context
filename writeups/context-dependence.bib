  journal = {Journal of the Royal Statistical Society},
  keywords = {Markov_random_field image_reconstruction statistics},
  number = 3,
  pages = {259--302},
  timestamp = {2014-05-28T12:59:27.000+0200},
  title = {On the statistical analysis of dirty pictures},
  volume = 48,
  year = 1986
}


